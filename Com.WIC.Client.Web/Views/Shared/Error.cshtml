@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

@if (Model.StatusCode != null)
{
    <h1>@Model.StatusCode</h1>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <h2>@Model.ErrorMessage</h2>
}
else
{
    <h1 class="text-danger">Error.</h1>
    <h2 class="text-danger">An error occurred while processing your request.</h2>
}

@if (!string.IsNullOrEmpty(Model.ErrorDetails))
{
    <p class="text-muted">@Model.ErrorDetails</p>
}

@if (!string.IsNullOrEmpty(Model.OriginalPath))
{
    <p class="text-muted"><strong>Original path:</strong> @Model.OriginalPath</p>
}

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<a class="btn btn-primary" href="#" onclick="history.go(-1);">Go back</a>
